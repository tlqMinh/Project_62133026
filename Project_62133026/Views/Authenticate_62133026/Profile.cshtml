@model Project_62133026.Models.KhachHang
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="profile-container">
    <div class="profile pt-2 ">
        <div class="profile-avatar">
            <!-- Place user's avatar image here -->
            <img src="https://placekitten.com/100/100" alt="User Avatar">
        </div>
            
    </div>
    <div class="profile-details">
        <h2>Thông tin cá nhân</h2>
        <dl>
            @{ 
                string hoten = Model.hoKH + " " + Model.tenKH;
            }
            <dt>Tên khách hàng:</dt>
            <dd>@hoten</dd>

            <dt>Số điện thoại:</dt>
            <dd>@Model.sdt</dd>

            <dt>Địa chỉ:</dt>
            <dd>@Model.diaChi</dd>

            <dt>Email:</dt>
            <dd>@Model.email</dd>
        </dl>
    </div>
    <div class="profile-actions">
        @Html.ActionLink("Chỉnh sửa thông tin", "EditProfile", new { id = @Model.maKH }, new { @class = "btn btn-primary"})
    </div>
</div>