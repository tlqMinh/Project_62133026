@model Project_62133026.Models.NhanVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}

<h2 class="text-center">THÔNG TIN NHÂN VIÊN</h2>

<div>
    
    <dl class="dl-horizontal">
        <dt>
            Tên nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenNV)
        </dd>

        <dt>
            SĐT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sdt)
        </dd>

        <dt>
            Giới tính
        </dt>

        <dd>
            @{if (Model.gioiTinh == true)
                { gtinh = "Nũ"; }
                else
                { gtinh = "Nam"; }
            }
            @gtinh
        </dd>

        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngaySinh)
        </dd>

        <dt>
            Loại nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiNhanVien.tenLNV)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.maNV }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
