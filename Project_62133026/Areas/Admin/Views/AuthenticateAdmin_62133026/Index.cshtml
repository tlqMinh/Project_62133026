@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminLogin.cshtml";
}

<form method="post">
    <div class="w-25 position-absolute top-50 start-50 translate-middle">
        <div class="mb-3 text-center">
            <img width="100" height="100" src="https://i.pinimg.com/736x/6b/dc/d2/6bdcd2814d0587fe1ea1d3a2cacb0b3e.jpg" />
        </div>
        <div class="mb-3 text-center fw-bold">
            ADMIN
        </div>
        <div class="form-group mb-3">
            <input type="email" name="email" class="form-control border border-secondary" id="floatingInput" placeholder="Email" value="@ViewBag.email">
        </div>
        <div class="form-group mb-3">
            <input type="password" name="password" class="form-control border border-secondary" id="floatingInput" placeholder="Mật khẩu">
        </div>
        <div class="mb-3 text-center">
            <span class="text-danger">
                @ViewBag.Mess
            </span>
        </div>
        <div class="mb-3 form-check text-center">
            <button type="submit" class="btn btn-dark">Đăng nhập</button>
        </div>

    </div>
</form>

